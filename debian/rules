#!/usr/bin/make -f
%:
	dh $@ --with python3 --with=systemd


# Added because poweroff executable binary 
override_dh_strip:
	dh_strip -Xpoweroff

# Added because poweroff executable binary 
override_dh_shlibdeps:
	dh_shlibdeps -Xpoweroff

override_dh_systemd_enable:
	dh_systemd_enable --name=pt-device-manager
	dh_systemd_enable --name=pt-poweroff
	dh_systemd_enable --name=pt-xhost-fix
	dh_systemd_enable --name=pt-capture-reboot

override_dh_installinit:
	dh_installinit --noscripts

override_dh_systemd_start:
	dh_systemd_start pt-device-manager
	dh_systemd_start --no-start pt-poweroff
	dh_systemd_start pt-xhost-fix
	dh_systemd_start --no-start pt-capture-reboot