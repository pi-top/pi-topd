#!/usr/bin/python3

# For testing the zmq servers

import zmq
import time

zmq_context = zmq.Context()
zmq_socket = zmq_context.socket(zmq.SUB)

print ("Connecting...")
zmq_socket.connect("tcp://127.0.0.1:25502")
zmq_socket.subscribe("")
print ("OK.")

time.sleep(1)

for i in range(100):

	print ("Waiting for message...")
	
	print (zmq_socket.recv())

	time.sleep(2)


print ("Closing socket...")

zmq_socket.close()

print ("Done.")

